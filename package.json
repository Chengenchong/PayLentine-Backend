{
  "name": "paylentine-backend",
  "version": "1.0.0",
  "description": "PayLentine Backend API Server",
  "main": "dist/server.js",
  "directories": {
    "test": "src/tests"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rmdir /s /q dist 2>nul || echo Directory already clean",
    "prebuild": "npm run clean",
    "postbuild": "echo \"Build completed successfully!\"",
    "lint": "echo \"Linting not configured yet\"",
    "type-check": "tsc --noEmit",
    "seed": "ts-node src/scripts/seed.ts",
    "db:setup": "npm run seed",
    "db:reset": "npm run seed"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "api",
    "backend",
    "paylentine"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.2",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "nodemon": "^3.1.7",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
